<UserControl x:Class="FFXIVAPP.Plugin.Parse.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Converters="clr-namespace:FFXIVAPP.Common.Converters;assembly=FFXIVAPP.Common"
             xmlns:Parse="clr-namespace:FFXIVAPP.Plugin.Parse.ViewModels"
             xmlns:PluginProperties="clr-namespace:FFXIVAPP.Plugin.Parse.Properties"
             xmlns:grids="clr-namespace:FFXIVAPP.Plugin.Parse.Controls"

             xmlns:groupbox="clr-namespace:Teast.Controls;assembly=Teast.Controls.GroupBox"
             xmlns:rs="clr-namespace:FFXIVAPP.ResourceFiles;assembly=FFXIVAPP.ResourceFiles"
             xmlns:local="clr-namespace:FFXIVAPP.Plugin.Parse"
             xmlns:utilities="clr-namespace:FFXIVAPP.Common.Utilities;assembly=FFXIVAPP.Common"
             xmlns:wpf="clr-namespace:FFXIVAPP.Common.WPF;assembly=FFXIVAPP.Common">
    <UserControl.Resources>
        <Converters:ToUpperConverter x:Key="ToUpperConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" DataContext="{x:Static Parse:MainViewModel.Instance}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TabControl x:Name="MainViewTC" Grid.Row="0">
            <TabControl.Styles>
                <Style Selector="TabItem">
                    <Setter Property="IsVisible" Value="False" />
                </Style>
            </TabControl.Styles>
            <TabItem>
                <Grid x:Name="MainGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition MinWidth="200" MaxWidth="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0"
                            Padding="0,0,15,0"
                            BorderBrush="{DynamicResource AccentColorBrush}"
                            BorderThickness="0,0,1,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0">
                                <TextBlock Margin="5"
                                           HorizontalAlignment="Center"
                                           Text="{Binding Locale[parse_ViewSourceLabel], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                <DropDown x:Name="InfoViewSource"
                                          Items="{Binding ParseHistory, Source={x:Static Parse:MainViewModel.Instance}}"
                                          SelectedIndex="0"
                                          MaxWidth="200"
                                          SelectionMode="AlwaysSelected"
                                          SelectedItem="{Binding SelectedViewSource, Source={x:Static Parse:MainViewModel.Instance}}" />
                                <TextBlock Margin="5"
                                           HorizontalAlignment="Center"
                                           Text="{Binding Locale[parse_ViewTypeLabel], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                <DropDown x:Name="InfoViewType"
                                          SelectionMode="AlwaysSelected"
                                          SelectedItem="{Binding SelectedViewType, Source={x:Static Parse:MainViewModel.Instance}}">
                                    <DropDownItem
                                        Tag="0"
                                        Content="{Binding Locale[parse_ScoreCardsComboBoxItemText], Source={x:Static local:PluginViewModel.Instance}}"
                                        IsSelected="True" />
                                    <DropDownItem
                                        Tag="1"
                                        Content="{Binding Locale[parse_PartyComboBoxItemText], Source={x:Static local:PluginViewModel.Instance}}" />
                                    <DropDownItem
                                        Tag="2"
                                        Content="{Binding Locale[parse_PartyAllComboBoxItemText], Source={x:Static local:PluginViewModel.Instance}}" />
                                    <DropDownItem
                                        Tag="3"
                                        Content="{Binding Locale[parse_MonsterComboBoxItemText], Source={x:Static local:PluginViewModel.Instance}}" />
                                    <DropDownItem
                                        Tag="4"
                                        Content="{Binding Locale[parse_MonsterAllComboBoxItemText], Source={x:Static local:PluginViewModel.Instance}}" />
                                </DropDown>
                                <Button x:Name="RefreshSelectedButton"
                                        MinHeight="28"
                                        Margin="0,5"
                                        Command="{Binding RefreshSelectedCommand}"
                                        ToolTip.Tip="{Binding Locale[parse_RefreshSelectedButtonText], Source={x:Static local:PluginViewModel.Instance}}"
                                        IsVisible="{Binding ShowRefreshSelectedButton, Source={x:Static Parse:MainViewModel.Instance}}">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Width="16"
                                               Height="16"
                                               Source="{x:Static rs:Theme.RefreshIcon20}" />
                                        <TextBlock
                                                   Text="{Binding Locale[parse_RefreshSelectedButtonText], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <!-- TODO: How do NotifyOnTargetUpdated and SourceUpdated work in AvaloniaUI? TextBlock.SelectedPlayerName
                                       DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                            -->
                            <TextBlock x:Name="SelectedPlayerName"
                                       Grid.Row="1"
                                       DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView}"
                                       Text="{Binding Path=Name}"
                                       IsVisible="False" />
                            <ListBox x:Name="PlayerInfoListView"
                                      Grid.Row="1"
                                      BorderThickness="0"
                                      Items="{Binding PlayerInfoSource, Source={x:Static Parse:MainViewModel.Instance}}"
                                      SelectionMode="Single"
                                      IsVisible="{Binding ShowPlayerInfoListView, Source={x:Static Parse:MainViewModel.Instance}}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1">
                                            <TextBlock Text="{Binding Name}" />
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <!-- TODO: Textblock.SelectedMonsterName, how to handle NotifyOnTargetUpdated DataContext="{Binding SelectedItem, ElementName=MonsterInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"-->
                            <TextBlock x:Name="SelectedMonsterName"
                                       Grid.Row="1"
                                       DataContext="{Binding SelectedItem, ElementName=MonsterInfoListView}"
                                       Text="{Binding Path=Name}"
                                       IsVisible="False" />
                            <ListBox x:Name="MonsterInfoListView"
                                      Grid.Row="1"
                                      BorderThickness="0"
                                      Items="{Binding MonsterInfoSource, Source={x:Static Parse:MainViewModel.Instance}}"
                                      SelectionMode="Single"
                                      IsVisible="{Binding ShowMonsterInfoListView, Source={x:Static Parse:MainViewModel.Instance}}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1">
                                            <TextBlock Text="{Binding Name}" />
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>
                    <TabControl x:Name="InfoViewResults" Grid.Column="1">
                        <TabControl.Styles>
                            <Style Selector="TabItem">
                                <Setter Property="IsVisible" Value="False" />
                            </Style>
                        </TabControl.Styles>
                    <!-- TODO: TabControl.ItemContainerStyle
                        <TabControl.ItemContainerStyle>
                            <Style TargetType="{x:Type TabItem}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </Style>
                        </TabControl.ItemContainerStyle>
                    -->
                        <TabItem x:Name="PartyScoreCards">
                            <TabItem.Header />
                            <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                                <StackPanel>
                                    <groupbox:GroupBox x:Name="OverallInfoScoreCard"
                                              DataContext="{Binding OverallInfoSource, Source={x:Static Parse:MainViewModel.Instance}}"
                                              Header="{Binding Locale[parse_ScoreCardHeader], Source={x:Static local:PluginViewModel.Instance}}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Row="0" Grid.Column="0">
                                                <TextBlock
                                                    Text="{Binding Locale[parse_CombinedTotalOverallDamageLabel], Source={x:Static local:PluginViewModel.Instance}}" />
                                                <TextBlock
                                                    Text="{Binding Locale[parse_CombinedTotalOverallHealingLabel], Source={x:Static local:PluginViewModel.Instance}}" />
                                                <TextBlock
                                                    Text="{Binding Locale[parse_CombinedTotalOverallDamageTakenLabel], Source={x:Static local:PluginViewModel.Instance}}" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="0" Grid.Column="1">
                                                <TextBlock 
                                                           HorizontalAlignment="Right"
                                                           Text="{Binding CombinedTotalOverallDamage, StringFormat=\{0:N0\}}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock 
                                                           HorizontalAlignment="Right"
                                                           Text="{Binding CombinedTotalOverallHealing, StringFormat=\{0:N0\}}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock 
                                                           HorizontalAlignment="Right"
                                                           Text="{Binding CombinedTotalOverallDamageTaken, StringFormat=\{0:N0\}}"
                                                           TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="0" Grid.Column="2">
                                                <TextBlock
                                                    Text="{Binding Locale[parse_CombinedDPSLabel], Source={x:Static local:PluginViewModel.Instance}}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Text="{Binding Locale[parse_CombinedHPSLabel], Source={x:Static local:PluginViewModel.Instance}}"
                                                    TextWrapping="Wrap" />
                                                <TextBlock
                                                    Text="{Binding Locale[parse_CombinedDTPSLabel], Source={x:Static local:PluginViewModel.Instance}}"
                                                    TextWrapping="Wrap" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="0" Grid.Column="3">
                                                <TextBlock 
                                                           HorizontalAlignment="Right"
                                                           Text="{Binding CombinedDPS, StringFormat=\{0:N0\}}" />
                                                <TextBlock 
                                                           HorizontalAlignment="Right"
                                                           Text="{Binding CombinedHPS, StringFormat=\{0:N0\}}" />
                                                <TextBlock 
                                                           HorizontalAlignment="Right"
                                                           Text="{Binding CombinedDTPS, StringFormat=\{0:N0\}}" />
                                            </StackPanel>
                                        </Grid>
                                    </groupbox:GroupBox>
                                    <TextBlock HorizontalAlignment="Center"
                                               Foreground="{DynamicResource BlackColorBrush}"
                                               Text="{Binding Locale[parse_BasicGlobalWarningLabel], Source={x:Static local:PluginViewModel.Instance}}"
                                               TextWrapping="Wrap"
                                               IsVisible="{Binding EnableHelpLabels, Source={x:Static local:PluginViewModel.Instance}}" />

                                    <ItemsControl x:Name="PlayerInfoScoreCard"
                                                  Items="{Binding PlayerInfoSource, Source={x:Static Parse:MainViewModel.Instance}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <grids:PlayerInfoBox MaxWidth="300" DataContext="{Binding}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                        <TabItem x:Name="PartyBreakDownInfo">
                            <TabControl x:Name="PlayerResults">
                                <TabItem>
                                    <TabItem.Header>
                                        <TextBlock Text="{Binding Locale[parse_PartyDamageActionsHeader], Source={x:Static local:PluginViewModel.Instance}}" />
                                    </TabItem.Header>
                                    <ScrollViewer>
                                        <StackPanel>
                                            <Button Margin="3"
                                                    Command="{Binding ShowLast20PlayerActionsCommand, Source={x:Static Parse:MainViewModel.Instance}}"
                                                    CommandParameter="Damage"
                                                    Content="{Binding Locale[parse_ShowLast20DamageActions], Source={x:Static local:PluginViewModel.Instance}}" />
                                            <groupbox:GroupBox
                                                Padding="0"
                                                HeaderForeground="White"
                                                Header="{Binding Locale[parse_TotalsNormalHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}">
                                                <!-- TODO: DamageDataGrid
                                                <grids:DamageDataGrid x:Name="PlayerDamageByAction"
                                                                      BorderThickness="0"
                                                                      DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                      Items="{Binding DamageByAction}"
                                                                      SelectionMode="Single"
                                                                      Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </groupbox:GroupBox>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock 
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsOverTimeHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: DamageOverTimeDataGrid
                                                <grids:DamageOverTimeDataGrid x:Name="PlayerDamageOverTimeByAction"
                                                                              BorderThickness="0"
                                                                              DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                              Items="{Binding DamageOverTimeByAction}"
                                                                              SelectionMode="Single"
                                                                              Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem>
                                    <TabItem.Header>
                                        <TextBlock Text="{Binding Locale[parse_PartyDamageMonstersHeader], Source={x:Static local:PluginViewModel.Instance}}" />
                                    </TabItem.Header>
                                    <ScrollViewer>
                                        <StackPanel>
                                            <groupbox:GroupBox Padding="0"
                                                HeaderForeground="White"
                                                Header="{Binding Locale[parse_TotalsNormalHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}">
                                                <!-- TODO: DamageDataGrid
                                                <grids:DamageDataGrid x:Name="PlayerDamageToMonsters"
                                                                      BorderThickness="0"
                                                                      DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                      Items="{Binding DamageToMonsters}"
                                                                      SelectionMode="Single"
                                                                      Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </groupbox:GroupBox>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock 
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsActionsHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: DamageDataGrid
                                                <grids:DamageDataGrid x:Name="PlayerDamageToMonstersByAction"
                                                                      BorderThickness="0"
                                                                      DataContext="{Binding SelectedItem, ElementName=PlayerDamageToMonsters, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                      Items="{Binding DamageToMonstersByAction}"
                                                                      SelectionMode="Single"
                                                                      Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                            <!-- TODO: MetroProgressBar
                                            <controls:MetroProgressBar Height="5"
                                                                       Margin="5"
                                                                       Foreground="{DynamicResource AccentColorBrush}"
                                                                       IsIndeterminate="True" />
                                            -->
                                            <groupbox:GroupBox Padding="0"
                                                HeaderForeground="White"
                                                Header="{Binding Locale[parse_TotalsOverTimeHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}">
                                                <!-- TODO: DamageOverTimeDataGrid
                                                <grids:DamageOverTimeDataGrid x:Name="PlayerDamageOverTimeToMonsters"
                                                                              BorderThickness="0"
                                                                              DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                              Items="{Binding DamageOverTimeToMonsters}"
                                                                              SelectionMode="Single"
                                                                              Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </groupbox:GroupBox>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsActionsHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: DamageOverTimeDataGrid
                                                <grids:DamageOverTimeDataGrid
                                                    x:Name="PlayerDamageOverTimeToMonstersByAction"
                                                    BorderThickness="0"
                                                    DataContext="{Binding SelectedItem, ElementName=PlayerDamageOverTimeToMonsters, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                    Items="{Binding DamageOverTimeToMonstersByAction}"
                                                    SelectionMode="Single"
                                                    Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem>
                                    <TabItem.Header>
                                        <TextBlock Text="{Binding Locale[parse_PartyHealingActionsHeader], Source={x:Static local:PluginViewModel.Instance}}" />
                                    </TabItem.Header>
                                    <ScrollViewer>
                                        <StackPanel>
                                            <Button Margin="3"
                                                    Command="{Binding ShowLast20PlayerActionsCommand, Source={x:Static Parse:MainViewModel.Instance}}"
                                                    CommandParameter="Healing"
                                                    Content="{Binding Locale[parse_ShowLast20HealingActions], Source={x:Static local:PluginViewModel.Instance}}" />
                                            <groupbox:GroupBox Padding="0"
                                                HeaderForeground="White"
                                                Header="{Binding Locale[parse_TotalsNormalHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}">
                                                <!-- TODO: HealingDataGrid
                                                <grids:HealingDataGrid x:Name="PlayerHealingByAction"
                                                                       BorderThickness="0"
                                                                       DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                       Items="{Binding HealingByAction}"
                                                                       SelectionMode="Single"
                                                                       Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </groupbox:GroupBox>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsOverHealingHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: HealingOverHealingDataGrid
                                                <grids:HealingOverHealingDataGrid
                                                    x:Name="PlayerHealingOverHealingByAction"
                                                    BorderThickness="0"
                                                    DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                    Items="{Binding HealingOverHealingByAction}"
                                                    SelectionMode="Single"
                                                    Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsOverTimeHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: HealingOverTimeDataGrid
                                                <grids:HealingOverTimeDataGrid x:Name="PlayerHealingOverTimeByAction"
                                                                               BorderThickness="0"
                                                                               DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                               Items="{Binding HealingOverTimeByAction}"
                                                                               SelectionMode="Single"
                                                                               Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsMitigatedHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: HealingMitigatedDataGrid
                                                <grids:HealingMitigatedDataGrid x:Name="PlayerHealingMitigatedByAction"
                                                                                BorderThickness="0"
                                                                                DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                                Items="{Binding HealingMitigatedByAction}"
                                                                                SelectionMode="Single"
                                                                                Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                        </StackPanel>
                                    </ScrollViewer>
                                </TabItem>
                                <TabItem>
                                    <TabItem.Header>
                                        <TextBlock Text="{Binding Locale[parse_PartyHealingPlayersHeader], Source={x:Static local:PluginViewModel.Instance}}" />
                                    </TabItem.Header>
                                    <ScrollViewer>
                                        <StackPanel>
                                            <groupbox:GroupBox Padding="0"
                                                HeaderForeground="White"
                                                Header="{Binding Locale[parse_TotalsNormalHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}">
                                                <!-- TODO: HealingDataGrid
                                                <grids:HealingDataGrid x:Name="PlayerHealingToPlayers"
                                                                       BorderThickness="0"
                                                                       DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                       Items="{Binding HealingToPlayers}"
                                                                       SelectionMode="Single"
                                                                       Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </groupbox:GroupBox>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsActionsHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: HealingDataGrid
                                                <grids:HealingDataGrid x:Name="PlayerHealingToPlayersByAction"
                                                                       BorderThickness="0"
                                                                       DataContext="{Binding SelectedItem, ElementName=PlayerHealingToPlayers, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                       Items="{Binding HealingToPlayersByAction}"
                                                                       SelectionMode="Single"
                                                                       Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                            <!-- TODO: MetroProgressBar
                                            <controls:MetroProgressBar Height="5"
                                                                       Margin="5"
                                                                       Foreground="{DynamicResource AccentColorBrush}"
                                                                       IsIndeterminate="True" />
                                            -->
                                            <groupbox:GroupBox Padding="0"
                                                HeaderForeground="White"
                                                Header="{Binding Locale[parse_TotalsOverHealingHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}">
                                                <!-- TODO: HealingOverHealingDataGrid
                                                <grids:HealingOverHealingDataGrid
                                                    x:Name="PlayerHealingOverHealingToPlayers"
                                                    BorderThickness="0"
                                                    DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                    Items="{Binding HealingOverHealingToPlayers}"
                                                    SelectionMode="Single"
                                                    Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </groupbox:GroupBox>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsActionsHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: HealingOverHealingDataGrid
                                                <grids:HealingOverHealingDataGrid
                                                    x:Name="PlayerHealingOverHealingToPlayersByAction"
                                                    BorderThickness="0"
                                                    DataContext="{Binding SelectedItem, ElementName=PlayerHealingOverHealingToPlayers, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                    Items="{Binding HealingOverHealingToPlayersByAction}"
                                                    SelectionMode="Single"
                                                    Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                            <!-- TODO: MetroProgressBar
                                            <controls:MetroProgressBar Height="5"
                                                                       Margin="5"
                                                                       Foreground="{DynamicResource AccentColorBrush}"
                                                                       IsIndeterminate="True" />
                                            -->
                                            <groupbox:GroupBox Padding="0"
                                                HeaderForeground="White"
                                                Header="{Binding Locale[parse_TotalsOverTimeHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}">
                                                <!-- TODO: HealingOverTimeDataGrid
                                                <grids:HealingOverTimeDataGrid x:Name="PlayerHealingOverTimeToPlayers"
                                                                               BorderThickness="0"
                                                                               DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                                               Items="{Binding HealingOverTimeToPlayers}"
                                                                               SelectionMode="Single"
                                                                               Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </groupbox:GroupBox>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsActionsHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
                                                </Expander.Header>
                                                <!-- TODO: HealingOverTimeDataGrid
                                                <grids:HealingOverTimeDataGrid
                                                    x:Name="PlayerHealingOverTimeToPlayersByAction"
                                                    BorderThickness="0"
                                                    DataContext="{Binding SelectedItem, ElementName=PlayerHealingOverTimeToPlayers, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                    Items="{Binding HealingOverTimeToPlayersByAction}"
                                                    SelectionMode="Single"
                                                    Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </Expander>
                                            <!-- TODO: MetroProgressBar
                                            <controls:MetroProgressBar Height="5"
                                                                       Margin="5"
                                                                       Foreground="{DynamicResource AccentColorBrush}"
                                                                       IsIndeterminate="True" />
                                            -->
                                            <groupbox:GroupBox Padding="0"
                                                HeaderForeground="White"
                                                Header="{Binding Locale[parse_TotalsMitigatedHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}">
                                                <!-- TODO: HealingMitigatedDataGrid
                                                <grids:HealingMitigatedDataGrid
                                                    x:Name="PlayerHealingMitigatedToPlayers"
                                                    BorderThickness="0"
                                                    DataContext="{Binding SelectedItem, ElementName=PlayerInfoListView, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"
                                                    Items="{Binding HealingMitigatedToPlayers}"
                                                    SelectionMode="Single"
                                                    Style="{DynamicResource MetroDataGrid}" />
                                                -->
                                            </groupbox:GroupBox>
                                            <Expander Margin="5,0" Padding="0">
                                                <Expander.Header>
                                                    <TextBlock
                                                               Foreground="White"
                                                               Text="{Binding Locale[parse_TotalsActionsHeader], Source={x:Static local:PluginViewModel.Instance}, Converter={StaticResource ToUpperConverter}}" />
